<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SkintoneSelectionActivity">

    <RelativeLayout
        android:id="@+id/cameraCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <androidx.camera.view.PreviewView
            android:id="@+id/cameraPreview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:background="@color/grey_bgframe"
            android:paddingVertical="5dp"
            android:layout_alignParentBottom="true">


            <!--        Spring Skin Tone-->
            <View
                android:id="@+id/f_spr"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:background="@drawable/skintone_selector"/>

            <View
                android:id="@+id/t_spr"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:background="@drawable/skintone_selector"/>

            <View
                android:id="@+id/d_spr"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:background="@drawable/skintone_selector"/>


            <!--        Autumn Skin Tone-->
            <View
                android:id="@+id/f_aut"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:background="@drawable/skintone_selector"/>

            <View
                android:id="@+id/t_aut"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:background="@drawable/skintone_selector"/>

            <View
                android:id="@+id/d_aut"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:background="@drawable/skintone_selector"/>


            <!--        Summer Skin Tone-->
            <View
                android:id="@+id/f_summ"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:background="@drawable/skintone_selector"/>

            <View
                android:id="@+id/t_summ"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:background="@drawable/skintone_selector"/>

            <View
                android:id="@+id/d_summ"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:background="@drawable/skintone_selector"/>

            <!--        Winter Skin Tone-->
            <View
                android:id="@+id/f_wint"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:background="@drawable/skintone_selector"/>

            <View
                android:id="@+id/t_wint"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:background="@drawable/skintone_selector"/>

            <View
                android:id="@+id/d_wint"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:background="@drawable/skintone_selector"/>



        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>